# Transaction enrichment rules
# Save as {account_name}.yaml (lowercase, spaces replaced with underscores)
# e.g., "Amex" -> "amex.yaml", "Bank Credit" -> "bank_credit.yaml"

# Patterns matched against transaction descriptions
# Fields: payee, narration, account (expense account)

start_with:
  # Matches descriptions starting with this text
  AMAZON:
    payee: Amazon
  NETFLIX:
    payee: Netflix
    account: Expenses:Subscriptions
  WHOLEFDS:
    payee: Whole Foods
    account: Expenses:Food:Groceries

include:
  # Matches descriptions containing this text
  UBER:
    payee: Uber
  STARBUCKS:
    payee: Starbucks
    account: Expenses:Food:Coffee
